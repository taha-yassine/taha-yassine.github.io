---
interface Props {
	title?: string;
}

const { title } = Astro.props;
---

<div class="callout">
	{title && <div class="callout-title">{title}</div>}
	<div class="callout-content">
		<slot />
	</div>
</div>

<style>
	.callout {
		border-left: 4px solid var(--accent);
		padding: 1em 1.25em;
		margin: 1.5em 0;
		background-color: rgba(188, 88, 78, 0.05);
	}

	.callout-title {
		font-weight: 700;
		margin-bottom: 0.5em;
		color: var(--black);
		font-size: 1em;
	}

	.callout-content {
		color: var(--gray-dark);
	}

	.callout-content :global(p:last-child) {
		margin-bottom: 0;
	}
</style>


---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import TableOfContents from '../components/TableOfContents.astro';

interface Heading { depth: number; slug: string; text: string }
type Props = CollectionEntry<'blog'>['data'] & { headings?: Heading[] };

const { title, description, pubDate, updatedDate, heroImage, headings } = Astro.props;

// Reset footnote numbering per page render
globalThis.__fnCounter = 0;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<div class="page">
			<div class="header-section">
				<Header title={title} />
				<div class="title">
					<h1>{title}</h1>
					{description && <div class="description">{description}</div>}
					<div class="date">
						<FormattedDate date={pubDate} />
						{
							updatedDate && (
								<div class="last-updated-on">
									Last updated on <FormattedDate date={updatedDate} />
								</div>
							)
						}
					</div>
					<hr />
				</div>
			</div>
			<aside class="rail-left" aria-labelledby="toc-heading" role="complementary">
				<TableOfContents headings={headings} />
			</aside>
			<div class="container">
				<main>
					<article id="top">
						<div class="prose">
							<slot />
						</div>
					</article>
				</main>
				<Footer />
			</div>
		</div>
		<style>
			.page {
				display: grid;
				grid-template-columns: 1fr minmax(0, 800px) 1fr;
			}
			.header-section {
				grid-column: 2;
				max-width: 800px;
				margin: 0 auto;
			}
			.rail-left {
				grid-column: 1;
				justify-self: end;
			}
			.container {
				max-width: 800px;
				margin: 0 auto;
				grid-column: 2;
			}
			.container main {
				padding: 0 1em;
			}
			@media (max-width: 1200px) {
				.rail-left {
					display: none;
				}
			}
			.prose {
				width: 100%;
				color: var(--gray-dark);
			}
			@media (min-width: 1201px) {
				.prose {
					padding-right: calc(var(--fn-width, 240px) + var(--fn-gutter, 16px));
				}
			}
			article {
				--fn-width: 240px;
				--fn-gutter: 16px;
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 1em 0;
				text-align: left;
				width: 100%;
				box-sizing: border-box;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
			}
			.description {
				margin-bottom: 0.5em;
				color: var(--gray-light);
				font-size: 1.1em;
			}
			.date {
				margin-bottom: 0.5em;
				color: var(--gray-light);
			}
			.last-updated-on {
				font-style: italic;
			}
			.prose :global(img) {
				display: block;
				width: 70%;
				height: auto;
				margin: 0 auto;
			}
		</style>
	</body>
</html>
